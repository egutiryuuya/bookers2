<!--ユーザー一覧ページ-->
<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'user',user: @user %>
      <%= render '/books/book',book: @book %>
    </div>
    <!--ユーザー一覧-->
    <div class="col-8">
    <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          </tr>
        </thead>
         <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_image%></td>
          <td><%=user.name %></td>
          <td><%=link_to "show",user_path(user.id)%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>