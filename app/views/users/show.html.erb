<div class= "container">
  <div class="row">
    <div class="col-4 mt-5">
      <%= render 'user',user: @user %>
      <!--ここから投稿欄-->
      <%= render '/books/book',book: @book %>
      </div>
    
     <!--ここからログインユーザー投稿一覧 -->
    <div class="col-8 mt-5">
      <h1>Books</h1>
      
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Oponition</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_image %></td>
          <td><%=link_to book.title,book_path(book.id) %></td>
          <td><%=book.body %></td>
        </tr>
        <% end %>
      </table>
      
      
    </div>
  </div>
</div>
 