<div class="container">
  <div class="row">
    <div class ="col-5 pt-5 mx-auto">
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <% @user.errors.full_messages.each do |message| %>
        <ul>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <h1>User info</h1>
       <%= form_with model:@user, url:user_path(current_user.id),method: :patch do |f| %>
      <div class = "form-group">
      <label for="inputName">Name</label><br>
      <%=f.text_field :name %>
      </div>
      <label for="inputImage ">Image</label><br>
      <%=f.file_field :profile_image %><br>
      <label for="introduction">Introduction</label><br>
      <%=f.text_area :introduction %><br>
      
      <%=f.submit "Update User",class: "btn btn-secondary my-3" %>
      <% end %>
      
      
    </div>
  </div>
</div>