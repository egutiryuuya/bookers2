<main>
  <div class="container">
    <div class="row">
      <!--左側-->
      <div class="col-4">
        <%= render '/users/user', user: @user %>
      <!--ここから投稿欄-->
        <%= render 'book', book: @book %>
      </div>
      <!--右側-->
      <div class="col-8 mt-3">
        <h1>Bookers</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%=image_tag book.user.get_image%></td>
            <td><%=link_to book.title,book_path(book.id) %></td>
            <td><%=book.body %></td>
            <td><%=book.id %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
 
</main>