<main>
  <div class="container">
    <div class="row">
      <!--左側-->
      <div class="col-4">
        <h1>User info</h1>
      <h1>user.image</h1>
      <table>
        <tr>
          <th>name</th><th><%=current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th><th><%=current_user.introduction %></th>
        </tr>
      </table>
      <%=link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block mt-5' do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
      <!--ここから投稿欄-->
      <h1 class="mt-3">New book</h1>
      <%= form_with model: @book, url: books_path,method: :post do |f| %>
      <h4>Title</h4>
      <%= f.text_area :title %>
      <h4>Opinition</h4>
      <%= f.text_field :body %>
      <%= f.submit 'Create Book', class: "btn btn-success"%>
      <% end %>
      </div>
      <!--右側-->
      <div class="col-8 mt-3">
        <h1>Bookers</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%=image_tag book.user.get_image%></td>
            <td><%=link_to book.title,book_path(book.id) %></td>
            <td><%=book.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
 
</main>